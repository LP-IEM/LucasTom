<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:background="#e9e9e9">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/item_imgVw_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:src="@drawable/salade" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000" />

        <TextView

            android:id="@+id/item_textVw_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/item_price"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="8dp"
            android:textColor="#FFF"
            android:textSize="15sp"
            tools:text="0,5 â‚¬" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_textVw_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="25sp"
            tools:text="Salade" />

        <TextView
            android:id="@+id/item_textVw_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:textColor="#313131"
            android:textSize="15sp"
            tools:text="Salade vert lormem ipsum lormem ipsum lormem ipsum lormem ipsum lormem ipsum" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <Button
            android:id="@+id/item_bttn_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="+"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/item_textVw_number"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:gravity="center"
            android:layout_weight="1"
            android:text="0"
            android:textSize="25sp" />

        <Button
            android:id="@+id/item_bttn_remove"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="-"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>